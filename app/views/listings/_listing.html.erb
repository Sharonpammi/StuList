<li>
  <span class = "content">
    <a href="../listings/<%= listing.id %>"><%= listing.name %></a>
    <% if listing.photo.exists? %>
      <%= image_tag listing.photo.url(:small) %>
    <% end %>
  	<p><strong>ProductType:</strong> <%= listing.producttype %></p>
  	<p><strong>SubCategory:</strong> <%= listing.subcategory %></p> 
  	<p><strong>Category:</strong> <%= listing.category%></p> 
  	<p><strong>Description:</strong> <%= listing.description %></p>  
  	<p><strong>Price $</strong><%= listing.price %></p>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(listing.created_at) %> ago.
  </span>
  <%= button_to "Edit", edit_listing_path(listing), method: "get" %>

  <% if current_user?(listing.user) %>
    <%= link_to "delete", listing, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>
</li>