<section id = "signup" class="row">
  <section id = "signupcontent" class="container">
    <h2>Sign up</h2>

    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    		<% if @user.errors.any? %>
    		  <div id="error_explanation">
    		    <div class="alert alert-error">
    		      The form contains <%= pluralize(@user.errors.count, "error") %>.
    		    </div>
    		    <ul>
    		    <% @user.errors.full_messages.each do |msg| %>
    		      <li>* <%= msg %></li>
    		    <% end %>
    		    </ul>
    		  </div>
    		<% end %>

          <%= f.label :first_name, "First Name" %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name, "Last Name" %>
          <%= f.text_field :last_name %>

          <%= f.label :username, "Username (minimum 6 characters)" %>
          <%= f.text_field :username %>

          <%= f.label :email, "Email (.edu)" %>
          <%= f.text_field :email %>

          <%= f.label :zipcode, "Zipcode" %>
          <%= f.text_field :zipcode %>

          <%= f.label :password, "Password (minimum 6 characters)" %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirm Password" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create my account", class: "btn btn-large btn-primary", id: "submitbutton" %>
        <% end %>
      </div>
    </div>
  </section>
</section>